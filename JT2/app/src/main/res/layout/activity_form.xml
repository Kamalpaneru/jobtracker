<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#2d415a"
    tools:context="com.example.dillichalise.jt.RegisterActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Job Description Form"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="50dp"
                android:text="Job Title"
                android:paddingStart="8dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/jTitle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView9"
                android:background="@drawable/back"
                android:textColor="#fff"
                android:textColorHint="#bcc6c6"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:paddingStart="8dp"
                android:hint="Job Title"
                android:inputType="textCapWords|textPersonName" />

            <TextView
                android:id="@+id/skills1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/jTitle"
                android:layout_marginTop="35dp"
                android:text="Skills Required"
                android:paddingStart="8dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/skills"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/skills1"
                android:layout_marginTop="10dp"
                android:background="@drawable/back"
                android:textColor="#fff"
                android:textColorHint="#bcc6c6"
                android:ems="10"
                android:hint="Skills Required"
                android:paddingStart="8dp"
                android:inputType="textLongMessage|textPersonName" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/skills"
                android:layout_marginTop="35dp"
                android:text="Expiry Date"
                android:paddingStart="8dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView11"
                android:background="@drawable/back"
                android:textColor="#fff"
                android:textColorHint="#bcc6c6"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Enter Expiry date"
                android:paddingStart="8dp"
                android:inputType="textLongMessage|textPersonName" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/company"
                android:layout_marginTop="35dp"
                android:text="Email Address"
                android:paddingStart="8dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView13"
                android:layout_marginTop="10dp"
                android:background="@drawable/back"
                android:textColor="#fff"
                android:textColorHint="#bcc6c6"
                android:ems="10"
                android:hint="Enter Email Address"
                android:paddingStart="8dp"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/mnName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/email"
                android:layout_marginTop="35dp"
                android:text="Mobile Number"
                android:paddingStart="8dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/mn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/mnName"
                android:layout_marginTop="10dp"
                android:background="@drawable/back"
                android:textColor="#fff"
                android:textColorHint="#bcc6c6"
                android:ems="10"
                android:hint="Mobile Number"
                android:paddingStart="8dp"
                android:inputType="number" />


            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/mn"
                android:layout_marginTop="35dp"
                android:text="Location"
                android:paddingStart="8dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:background="@drawable/back"
                android:textColor="#fff"
                android:textColorHint="#bcc6c6"
                android:hint="Location"
                android:paddingStart="8dp"
                android:inputType="textLongMessage|textPersonName" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/location"
                android:layout_marginBottom="80dp"
                android:layout_marginTop="35dp"
                android:onClick="onSubmitClick"
                android:background="#009a9c"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Submit Form"
                android:textSize="20dp" />



        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>